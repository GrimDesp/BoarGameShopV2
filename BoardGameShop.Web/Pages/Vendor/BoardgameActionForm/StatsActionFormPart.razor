<div class="row justify-content-center  text-center">
    <div class="col-12">
        <p class="m-1">
            @if (IsChanged)
            {
                <span class=" bi bi-circle-fill text-success"></span>
            }
            Характеристики                        
            @if (IsChanged)
            {
                <button class="mx-1 @Disabled btn btn-primary" @onclick="ResetCallback">Відмінити</button>
            }
            else
            {
                <button class="mx-1 disabled btn btn-primary">Відмінити</button>
            }
        </p>
    </div>
    <div class="col-3 ">
        <img src=" age-group.png" style="height:1.2em;width:fit-content" />
        <div class="row justify-content-center">
            <div class="col-6">
                <select class=" form-select my-1 text-center  @Disabled" @bind="@Age">

                    @foreach (var AgeEnum in AgeList)
                    {
                        string str = AgeEnum == AgeEnum.None ? "None" : "+" + ((int)AgeEnum).ToString();
                        @if (AgeEnum == Age)
                        {
                            <option value="@AgeEnum" selected>@str</option>
                        }
                        else
                        {
                            <option value="@AgeEnum">
                                @str
                            </option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="col-4 border-2 border-start ">
        <div class="m-0 row justify-content-center">
            <span class="bi bi-clock col-12"></span>
            <input class=" col-4 form-text" type="number" @bind="@MinPlayTime" />
            <span class="col-1 align-content-center">хв.</span>

            <span class="col-2 align-content-center">-</span>
            <input class=" col-4 form-text"  type="number" @bind="@MaxPlayTime" />
            <span class="col-1 align-content-center">хв.</span>
        </div>
    </div>
    <div class="col-3 border-2 border-start ">
        <span class="bi bi-people"></span>
        <div class="m-0 row justify-content-center">
            <input class=" col-4 form-text"  type="number" @bind="@MinPlayer" />
            <span class="col-2  align-content-center">-</span>
            <input class=" col-4 form-text" type="number" @bind="@MaxPlayer" />
        </div>
    </div>
</div>