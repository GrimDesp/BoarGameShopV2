@page "/vendor/boardgames/edit/{Id:int}"
@layout MainLayout
@attribute [Authorize(Roles = nameof(Role.Vendor))]

<PageTitle>Загрузка...</PageTitle>
<div class="containerp-lg-2 border-2 border border-end justify-content-center text-center" style="font-size:1.1em; font-family:'Franklin Gothic Medium'">
    @if (!string.IsNullOrEmpty(InitErrorMessage) || Boardgame == null || EntitiesData == null)
    {
        <LoadingSpinner></LoadingSpinner>
    }
    else if (!string.IsNullOrEmpty(InitErrorMessage))
    {
        <div class="row-cols-auto alert-danger justify-content-center text-center">
            @InitErrorMessage
        </div>
    }
    else
    {
        <PageTitle>@Boardgame.Name</PageTitle>
        @if(!string.IsNullOrEmpty(SuccessMessage))
        {
            <div class="row-cols-auto alert-success justify-content-center text-center">
                @SuccessMessage
            </div>
        }
        <BoardgameActionForm ActionSuccess="updateSuccess" SendToAction="UpdateBoardgame" 
            EntitiesInfo="@EntitiesData" Boardgame="@Boardgame" ErrorMessage="@ErrorMessage"/>
    }
</div>