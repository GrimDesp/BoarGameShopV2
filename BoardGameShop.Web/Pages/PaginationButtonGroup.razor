@if(TotalPages > 0)
{
    <ul class="pagination m-2 justify-content-center">
        @if (CurrentPage == 0)
        {
            <li class="page-item pagination-lg disabled">

                <button class="page-link disabled" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </button>
            </li>

        }
        else
        {
            <li class="page-item pagination-lg">

                <button class="page-link" aria-label="Previous" @onclick="@(e => OnPaginationClick(e,CurrentPage - 1))">
                    <span aria-hidden="true">&laquo;</span>
                </button>
            </li>

        }
        @for (int i = 0; i < (TotalPages <= 3 ? TotalPages : 3); i++)
        {
            var buttonNumber = i;
            @if (i == CurrentPage)
            {
                <li class="page-item pagination-lg active">
                    <button class="page-link">@(i + 1)</button>
                </li>
                continue;
            }
            <li class="page-item pagination-lg">
                <button class="page-link" @onclick="@(e => OnPaginationClick(e,buttonNumber))">@(i + 1)</button>
            </li>
        }
        @if (CurrentPage == TotalPages - 1)
        {
            <li class="page-item pagination-lg disabled">

                <button class="page-link disabled" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </button>
            </li>

        }
        else
        {
            <li class="page-item pagination-lg">

                <button class="page-link" aria-label="Next" @onclick="@(e => OnPaginationClick(e,CurrentPage + 1))">
                    <span aria-hidden="true">&raquo;</span>
                </button>

            </li>

        }
    </ul>
}
